<mvc:View 
    controllerName="logaligroup.com.sapui5.controller.App"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <App id="idApp">
        <Page id="Page" title="My first App">
            <Button id="idButton1" 
                    text="{i18n>pressButton}" 
                    press=".onPress"  /> 
            <Input id="input" 
                    value="{oDataModel>/recipient/name}"
                    width="60%"
                    valueLiveUpdate="true" />
            <Text id="text" text="Hello {oDataModel>/recipient/name}"/> 
        </Page>
    </App>
</mvc:View>