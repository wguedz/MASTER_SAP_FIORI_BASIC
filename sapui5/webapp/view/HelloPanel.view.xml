<mvc:View controllerName="logaligroup.com.sapui5.controller.HelloPanel"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true">
    <Panel id="idPanel" class="sapUiResponsiveMargin">
        <content> 
            <Button id="helloDialogButton" 
                    icon="sap-icon://action"
                    text="{i18n>openDialogButtonText}" 
                    press=".onOpenDialog"
                    class="sapUiSmallMarginEnd"/>
            <Button id="idButton1" text="{i18n>pressButton}" press=".onPress" class="sapUiSmallMarginEnd"/>
            <Input id="input" value="{oDataModel>/recipient/name}" width="60%" valueLiveUpdate="true" />
            <Text id="text" text="Hello {oDataModel>/recipient/name}" class="sapUiSmallMargin boldElements"/>
        </content>
        
    </Panel>
    <core:Fragment fragmentName="logaligroup.com.sapui5.view.Form01" type="XML"/>
</mvc:View>    